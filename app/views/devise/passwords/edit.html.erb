
<div class="container">
  <div class="col-md-12 d-flex justify-content-center">
    <h3 class="form-heading text-center">Changer mon mot de passe</h3>
    <div class="login-form">
            <div class="main-div">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <%= f.hidden_field :reset_password_token %>

                  <div class="field">
                    <%= f.label :password, "New password" %><br />
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br />
                    <% end %>
                    <%= f.password_field :password, autofocus: true, autocomplete: "nouveau mot de passe" %>
                  </div>

                  <div class="field">
                    <%= f.label :confirmation_du_mot_de_passe, "Confirmer mon nouveau mot de passe" %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off" %>
                  </div>

                  <div class="actions">
                    <%= f.submit "Modifier mon mot de passe", class: "btn btn-primary btn-block" %>
                  </div>
                <% end %>

<%= render "devise/shared/links" %>
            </div>
    </div>
  </div>
</div>
